<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailUmkmActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHeadTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="18dp"
        android:drawableLeft="@drawable/ic_back"
        android:drawablePadding="12dp"
        android:text="Detail"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/bg"
        android:paddingHorizontal="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHeadTitle">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNameDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="Hasil"
            android:textColor="@color/purple_700"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgPhoto"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="24dp"
            android:background="@color/purple_700"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@+id/tvNameDetail" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRatingInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Rating :"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgPhoto" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="12dp"
            android:text="5"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/tvRatingInfo"
            app:layout_constraintTop_toBottomOf="@+id/imgPhoto" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvJarak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="6dp"
            android:text=""
            android:textSize="12sp"
            app:layout_constraintRight_toLeftOf="@+id/tvJarakInfo"
            app:layout_constraintTop_toBottomOf="@+id/imgPhoto" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvJarakInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="12dp"
            android:text="  KM"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgPhoto" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHargaInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Harga : Rp. "
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRatingInfo" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/tvHargaInfo"
            app:layout_constraintTop_toTopOf="@id/tvHargaInfo" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDeskripsiInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Deskripsi :"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvHarga" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Deskripsi Deskripsi Deskripsi Deskripsi Deskripsi Deskripsi Deskripsi "
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDeskripsiInfo" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPhoneInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="No. Telepon :"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDeskripsi" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:text="08989684968498"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/tvPhoneInfo"
            app:layout_constraintTop_toBottomOf="@+id/tvDeskripsi" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Lihat Rute"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>