<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="14dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="14dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgUmkm"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:src="@color/purple_700"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNamaProduk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/imgUmkm"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Nasi Goreng" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHargaProdukInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="Rp. "
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/tvRatingProduk"
            app:layout_constraintLeft_toRightOf="@id/imgUmkm"
            app:layout_constraintTop_toBottomOf="@id/tvNamaProduk" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHargaProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/tvRatingProduk"
            app:layout_constraintLeft_toRightOf="@id/tvHargaProdukInfo"
            app:layout_constraintTop_toBottomOf="@id/tvNamaProduk"
            tools:text="15000" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvJarakUmkm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/tvRatingProduk"
            app:layout_constraintRight_toLeftOf="@id/tvJarakUmkmInfo"
            app:layout_constraintTop_toTopOf="@id/tvRatingProduk"
            tools:text="15000 M" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvJarakUmkmInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  KM"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/tvRatingProduk"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvRatingProduk" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRatingProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:drawableLeft="@drawable/ic_star"
            android:gravity="center"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/imgUmkm"
            app:layout_constraintLeft_toRightOf="@+id/imgUmkm"
            app:layout_constraintTop_toBottomOf="@id/tvHargaProdukInfo"
            tools:text="4.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>